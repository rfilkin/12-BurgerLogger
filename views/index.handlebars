<h1>Burgers!</h1>

<h2>Burgers available to eat:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="devour-btn" data-id="{{id}}">
            Devour it!
        </button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
        <textarea readonly>
            {{burger_name}}
        </textarea>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
