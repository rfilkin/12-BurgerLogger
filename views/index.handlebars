<img src="/assets/img/burger.png" alt="">

<h1>Eat-Da-Burger!</h1>
<div class="row">
    <div class="left-side column">
        <h2>Burgers available to eat:</h2>

        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            <li>
                <textarea readonly>{{id}}: {{burger_name}}</textarea>
                <button class="devour-btn" data-id="{{id}}">
                    Devour it!
                </button>
            </li>
            {{/unless}}
        {{/each}}
        </ul>
    </div>


    <div class="right-side column">
        <h2>Burgers eaten:</h2>

        <ul>
        {{#each burgers}}
            {{#if devoured}}
            <li>
                <textarea readonly>{{id}}: {{burger_name}}</textarea>
            </li>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name" class="burger-entry">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <p>Enter the name of a burger you want to eat, and click the Submit button.</p>
</form>
